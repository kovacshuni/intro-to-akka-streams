<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level %d{HH:mm:ss} %logger{15} - %message%n%xException{5}</pattern>
        </encoder>
    </appender>

    <logger name="com.hunorkovacs.riptube" level="DEBUG" />
    <logger name="com.hunorkovacs.workpulling" level="INFO" />
    <logger name="com.hunorkovacs.introtoakkastreams" level="DEBUG" />
    <logger name="akka" level="DEBUG" />

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
